{                                   
  "extends": [                      
    "eslint:recommended"            
  ]                                 
,                                   
  "parserOptions": {                
    "ecmaVersion": 2017             
  , "sourceType" : "module"         
  }                                 
, "rules": {                        
                                                                  
    "no-undef"                 : "error"
  , "no-unused-vars"           : "error"
                                                                  
  , "no-throw-literal"         : "warn"
  , "no-unexpected-multiline"  : "warn"
  , "spaced-comment"           : "warn"
  , "no-constant-condition"    : "warn"
                                                                  
  , "array-bracket-spacing"    : "off"
  , "block-spacing"            : "off"
  , "brace-style"              : "off"
  , "camelcase"                : "off"
  , "comma-dangle"             : "off"
  , "comma-spacing"            : "off"
  , "comma-style"              : "off"
  , "computed-property-spacing": "off"
  , "curly"                    : "off"
  , "func-call-spacing"        : "off"
  , "indent"                   : "off"
  , "key-spacing"              : "off"
  , "max-len"                  : "off"
  , "no-multi-spaces"          : "off"
  , "object-curly-spacing"     : "off"
  , "padded-blocks"            : "off"
  , "quotes"                   : "off"
  , "require-jsdoc"            : "off"
  , "semi"                     : "off"
                                                                  
  }                                 
, "globals": {                      

    "console"           : "readonly"
  , "document"          : "readonly"
  , "localStorage"      : "readonly"
  , "navigator"         : "readonly"                                                                                                 
  , "window"            : "readonly"

  , "require"           : "readonly"
  , "setInterval"       : "readonly"
  , "setTimeout"        : "readonly"

  , "Symbol"            : "readonly"
  , "Promise"           : "readonly"
  , "TextDecoder"       : "readonly"

  , "uiAddresses"       : "readonly"
  , "uiBlockHash"       : "readonly"
  , "uiBlockNo"         : "readonly"
  , "uiCertificate"     : "readonly"
  , "uiClipboard"       : "readonly"
  , "uiId"              : "readonly"
  , "uiIndexCid"        : "readonly"
  , "uiMarloweEvent"    : "readonly"
  , "uiPeers"           : "readonly"
  , "uiSlotNo"          : "readonly"
  , "uiTopic"           : "readonly"

  }
}
